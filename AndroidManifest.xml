<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="de.mirkosertic.opencvtest"
          android:versionCode="1"
          android:versionName="1.0.0"
          android:installLocation="auto">
    <uses-sdk android:minSdkVersion="10" android:targetSdkVersion="15"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <application android:label="@string/app_name" android:icon="@drawable/brush" android:theme="@style/Theme.Easypaint" android:hardwareAccelerated="true" android:largeHeap="true">
        <activity android:name="de.mirkosertic.opencvtest.OpenCVActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>
</manifest>
