<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@android:id/list" android:layout_gravity="center_horizontal|top"
            android:footerDividersEnabled="false" android:headerDividersEnabled="false"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emptylistinformation"
            android:id="@android:id/empty" android:layout_gravity="center" android:singleLine="false"/>
</FrameLayout>